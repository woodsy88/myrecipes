<%= render 'shared/page_title', title: "Available Skills" %>

<div align="center">
  <%= will_paginate %>
  <% @skills.each do |skill| %>
    <ul class="listing">
      <div class="well col-md-4 col-md-offset-4">
       
        <li class="member-title"><%= link_to skill.name.capitalize, skill_path(skill) %></li>
        <li><small><%= pluralize(skill.tips.count, "hockey tip") if skill.tips  %></small></li>
        <% if logged_in? && current_member.admin?  %>
        <li><%= link_to "Edit this skill", edit_skill_path(skill) %></li>
        <% end %>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>